        <record model="ir.actions.act_window" id="custom-addons/pp_employee.action_window">
          <field name="name">custom-addons/pp_employee window</field>
          <field name="res_model">custom-addons/pp_employee.custom-addons/pp_employee</field>
          <field name="view_mode">tree,form</field>
        </record>
        -->

        <!-- server action to the one above -->
        <!--
        <record model="ir.actions.server" id="custom-addons/pp_employee.action_server">
          <field name="name">custom-addons/pp_employee server</field>
          <field name="model_id" ref="model_custom-addons/pp_employee_custom-addons/pp_employee"/>
          <field name="state">code</field>
          <field name="code">
            action = {
              "type": "ir.actions.act_window",
              "view_mode": "tree,form",
              "res_model": self._name,
            }
          </field>
        </record>
        -->

        <!-- actions -->
        <record model="ir.actions.act_window" id="pp_employee_list_action">
            <field name="name">Jumbo Employees</field>
            <field name="res_model">pp.employee</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <!-- SET DEFAULT SEARCH
            <field name="context" eval="{'search_default_my_courses': 1}"/>
            -->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create some employee!</p>
            </field>
        </record>

        <!-- Top menu item -->
        <menuitem name="Jumbo Employees" id="pp_employee.menu_root"
                  web_icon="pp_employee,static/description/icon.png"/>
        <!-- menu categories -->
        <menuitem name="Jumbo Employees" id="pp_employee.menu_jumbo_employee" parent="pp_employee.menu_root"/>
        <menuitem name="Employees" id="pp_employee.menu_employees" parent="pp_employee.menu_jumbo_employee"
                  action="pp_employee_list_action"/>
    </data>
</odoo>